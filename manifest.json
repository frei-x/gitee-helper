{
    "name": "gitee helper",
    "version": "0.1.0",
    "version_name": "0.1.0",
    "description": "gitee 助手",
    // "options_page": "html/options.html",
    "background": {
        "scripts": [
            "js/tool/api.js",
            "js/tool/eventBus.js",
            "js/background.js"
        ],
        "persistent": true
    },
    "browser_action": {
        "default_title": "gitee helper 配置",
        "default_popup": "html/options.html"
    },
    // 注入页面的js
    "content_scripts": [
        {
            // "matches": ["https://*/*"],
            "matches": [
                "https://gitee.com/*"
            ],
            "js": [
                "js/insert.js"
            ],
            "css":["./css/index.css"],
            "run_at": "document_end"
        }
        // {
        //     // "matches": ["https://*/*"],
        //     "matches": [
        //         "https://gitee.com/login"
        //     ],
        //     "js": [
        //         "js/watch-login.js"
        //     ],
        //     "run_at": "document_end"
        // }
    ],
    "icons": {},
    "permissions": [
        "cookies",
        "tabs",
        "notifications",
        "https://*.gitee.com/*",
        "storage"
    ],
    "incognito": "split",
    "manifest_version": 2
}